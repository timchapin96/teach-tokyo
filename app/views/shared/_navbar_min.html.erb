<% if user_signed_in? %>
  <div class="menu" data-controller = "menu">
    <%= image_tag "menu-bars.svg", id: "menu-bar", data: {action: "click->menu#menuPopup"} %>
    <div class="popup-menu">
      <%= link_to I18n.t('options.home'), root_path %>
      <p data-controller = "new_game menu" data-action = "click->new_game#displayNew click->menu#menuPopup"><%= I18n.t('options.new') %></p>
      <p id = "load-button" data-controller="load menu" data-action="click->load#load click->menu#menuPopup"><%= I18n.t('options.load') %></p>
      <p><%= link_to I18n.t('options.games'), games_path %></p>
      <p id = "options-button" data-controller="options" data-action="click->options#optionsLoad"><%= I18n.t('options.options') %></p>
    </div>
  </div>
<% end %>
<nav class= "navbar-min">
  <div class="nav-elements">
    <div class="lang">
      <%= link_to 'EN', change_locale_path(locale: :en) %>
      <div class="vl"></div>
      <%= link_to 'JP', change_locale_path(locale: :ja) %>
    </div>
    <% if user_signed_in? %>
      <div class="profile">
        <%= link_to I18n.t('buttons.logout'), destroy_user_session_path, data: {turbo_method: :delete} %>
        <%= image_tag "default_user.png", class: "avatar" %>
      </div>
    <% else %>
      <div class="profile">
        <%= link_to I18n.t('buttons.login'), new_user_session_path %>
      </div>
    <% end %>
  </div>
</nav>
